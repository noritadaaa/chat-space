.Side-bar
  .user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.LeftHeader__Icon
          = link_to new_group_path do
            =icon( 'fas', 'edit', class: "icon-btn")
        %li.LeftHeader__Icon
          = link_to edit_user_path(current_user) do
            =icon( 'fas', 'cog', class: "icon-btn")
  
  .group-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .groups__name
            = group.name
          .groups__message
            = group.show_last_message

